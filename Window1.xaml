        <TextBox HorizontalAlignment="Center" Margin="0,242,0,0" VerticalAlignment="Top" Width="544" Height="60" Padding="75,15,15,15" FontFamily="Fonts/#INTER" FontSize="25" Foreground="#380E56" FontWeight="Light" BorderThickness="0,0,0,0"/>
        <TextBlock  Text="Регистрация" TextAlignment="Center" Foreground="White" Margin="586,92,586,68" FontSize="40" FontFamily="Sansation"/>
