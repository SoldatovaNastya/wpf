        <Label FontWeight="Light" Content="Повторите пароль:" HorizontalAlignment="Center" Margin="0,452,0,0" VerticalAlignment="Top" Height="60" FontFamily="Sansation" FontSize="25" Foreground="#FFFFFF" BorderThickness="0,0,0,0"/>
        <PasswordBox Style="{DynamicResource PasswordBoxStyle2}" HorizontalAlignment="Center" Margin="0,502,0,0" VerticalAlignment="Top" Width="544" Height="60" Padding="75,22,15,22" FontFamily="Fonts/#INTER" FontSize="15" Foreground="#380E56" FontWeight="Light" BorderThickness="0,0,0,0"/>
        <Image Source="./Images/Union (1).png" Height="30" Width="30" HorizontalAlignment="Left" Margin="470,257,0,0" VerticalAlignment="Top"/>
